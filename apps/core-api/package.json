{
  "name": "@plexica/core-api",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:unit": "vitest --config test/vitest.config.unit.ts",
    "test:integration": "vitest --config test/vitest.config.integration.ts",
    "test:e2e": "vitest --config test/vitest.config.e2e.ts",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:coverage": "vitest --coverage",
    "test:coverage:unit": "vitest --config test/vitest.config.unit.ts --coverage",
    "test:coverage:integration": "vitest --config test/vitest.config.integration.ts --coverage",
    "test:coverage:e2e": "vitest --config test/vitest.config.e2e.ts --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@keycloak/keycloak-admin-client": "^26.5.1",
    "@plexica/database": "workspace:*",
    "@plexica/event-bus": "workspace:*",
    "@plexica/i18n": "workspace:*",
    "axios": "^1.13.5",
    "dotenv": "^17.2.3",
    "fastify": "^5.7.4",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.3",
    "jwks-rsa": "^3.2.1",
    "kafkajs": "^2.2.4",
    "minio": "^8.0.2",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "safe-regex2": "^5.0.0",
    "semver": "^7.7.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/semver": "^7.7.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
