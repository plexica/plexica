{
  "name": "@plexica/i18n",
  "version": "0.1.0",
  "description": "Shared internationalization (i18n) utilities for Plexica - namespace-based translations with FormatJS",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./hash": "./src/hash.ts",
    "./hash.js": "./src/hash.ts"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "translations",
    "formatjs",
    "icu-messageformat"
  ],
  "dependencies": {
    "@formatjs/intl": "^2.10.14",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "intl-messageformat": "^10.7.11"
  }
}
