  "clients": [
    {
      "clientId": "plexica-test-api",
      "name": "Plexica Test API",
      "description": "Test API client for integration and E2E tests",
      "enabled": true,
      "publicClient": false,
      "protocol": "openid-connect",
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": false,
      "frontchannelLogout": true,
      "secret": "test-client-secret",
      "redirectUris": ["http://localhost:3000/*", "http://localhost:*"],
      "webOrigins": ["http://localhost:3000", "http://localhost:*"],
      "attributes": {
        "post.logout.redirect.uris": "http://localhost:*"
      },
      "defaultClientScopes": ["web-origins", "acr", "profile", "roles", "email"],
      "protocolMappers": [
        {
          "name": "sub-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-sub-mapper",
          "consentRequired": false,
          "config": {
            "introspection.token.claim": "true",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "lightweight.claim": "false",
            "access.token.claim": "true",
            "always.add.as.id.token.claim": "true"
          }
        },
        {
          "name": "tenant_id",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "userinfo.token.claim": "true",
            "user.attribute": "tenant_id",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "tenant_id",
            "jsonType.label": "String"
          }
        }
      ]
    },
    {
      "clientId": "plexica-test-app",
      "name": "Plexica Test Application",
      "description": "Test frontend application",
      "enabled": true,
      "publicClient": true,
      "protocol": "openid-connect",
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "frontchannelLogout": true,
      "rootUrl": "http://localhost:3001",
      "baseUrl": "http://localhost:3001",
      "redirectUris": ["http://localhost:3001/*", "http://localhost:*"],
      "webOrigins": ["http://localhost:3001", "http://localhost:*"],
      "attributes": {
        "post.logout.redirect.uris": "http://localhost:*"
      },
      "defaultClientScopes": ["web-origins", "acr", "profile", "roles", "email"]
    }
  ]
